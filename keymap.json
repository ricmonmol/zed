[
  {
    "context": "Workspace",
    "bindings": {
      "alt-h": "pane::ActivatePreviousItem",
      "alt-l": "pane::ActivateNextItem",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-t": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-c": "editor::Copy",
      "ctrl-shift-v": "editor::Paste",
      "alt-k": "editor::MoveLineUp",
      "alt-j": "editor::MoveLineDown"
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "space space": "file_finder::Toggle",
      "space e": "project_panel::ToggleFocus",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      "space t": "workspace::NewCenterTerminal",
      "ctrl-shift-v": "editor::Paste",
      "ctrl-x": "pane::CloseActiveItem",
      "space -": "pane::SplitDown",
      "space s": "pane::SplitRight",
      "ctrl-n": "pane::ActivateNextItem",
      "ctrl-b": "pane::ActivatePreviousItem",
      "space z": "workspace::CloseAllDocks",
      "ctrl-t": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "ctrl-s": "workspace::Save"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "space e": "workspace::ToggleLeftDock",
      "a": "project_panel::NewFile",
      "d": "project_panel::Delete",
      "r": "project_panel::Rename",
      "o": "project_panel::OpenPermanent",
      "ctrl-t": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "EmptyPane || SharedScreen",
    "bindings": {
      "space space": "file_finder::Toggle"
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "q": null
    }
  }
]

